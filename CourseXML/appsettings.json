{
  "CurrencyService": {
    "PollingIntervalSeconds": 2,
    "UseFileSystemWatcher": true,
    "EnableVerboseLogging": true,
    "EnableKeepAlive": true,
    "KeepAliveIntervalSeconds": 20,

    // НОВЫЕ НАСТРОЙКИ ДЛЯ УДАЛЕННОГО СЕРВЕРА
    "UseRemoteFile": true,
    "RemotePollingIntervalSeconds": 5
  },

  //эти пути видут для локальной разработки (Windows)
  "LocalPaths": {
    "SourceXmlPath": "C:\\Users\\danon\\Desktop\\rates_*.xml", // путь к файлу который отслеживаем
    "CurrentXmlPath": "C:\\Users\\danon\\Desktop\\CourseXML\\CourseXML\\Data\\current\\rates.xml", // вывод текущий курсов
    "ArchiveFolder": "C:\\Users\\danon\\Desktop\\CourseXML\\CourseXML\\Data\\archive\\" // сохраняем старый файл если заменили 
  },

  // пути для сервера (Linux)
  "LinuxPaths": {
    "SourceXmlPath": "/var/www/coursexml/Data/rates_*.xml", // путь к файлу который отслеживаем
    "CurrentXmlPath": "/var/www/coursexml/Data/current/rates.xml", // вывод текущий курсов
    "ArchiveFolder": "/var/www/coursexml/Data/archive/" // сохраняем старый файл если заменили 
  },


  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.AspNetCore.SignalR": "Information",
      "CourseXML_main.CourseXML.Hubs": "Information",
      "CourseXML_main.CourseXML.Services": "Information"
    }
  },

  "AllowedHosts": "*",
  "Kestrel": {
    "Endpoints": {
      "Http": {
        "Url": "http://0.0.0.0:5050" // просто стандратный порт по которому работает сервак
      }
    }
  }
}

