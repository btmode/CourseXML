    "FileName": "rates.xml", // название файла в котором отслеживаем значения
    "Port": 22, // порт удаленного сервера
    "UseSshKey": false, 
    "SshKeyPath": ""
  },

  "Logging": {
    "LogLevel": {
      "Default": "Information",
