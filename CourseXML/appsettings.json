  },
  // здесь нуно ввести данные для удаленного сервера
  "RemoteServer": {
    "Host": "192.168.36.129", // ip удаленого сервака
    "Username": "admin_", // пользователь под которым заходим
    "Password": "admin_", // пароль от сервера
